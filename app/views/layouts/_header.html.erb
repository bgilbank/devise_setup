<!-- NAVBAR WITH DROPDOWN -->
<header>
<nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top mb-3">
  <div class="container">
      <a class="navbar-brand" href="#">Devise Blog</a>
          <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link" href="#">Example Link</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Example Link</a>
              </li>
             <% if user_signed_in? && current_user.img.present? %> 
             <li class="nav-item">
                <%= image_tag current_user.img.url, class: "rounded-circle header-profile-img" %>
              </li>
             <% end %>
             <% if user_signed_in? && current_user.img.blank? %> 
             <li class="nav-item">
                <%= header_gravatar_for(current_user) %>
             </li>
              <% end %>
              <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"></a>
                <div class="dropdown-menu">
                  <%= link_to "View All Profiles", users_path, class: "dropdown-item" %>
                  <%= link_to "View Your Profile", current_user, class: "dropdown-item" %>
                  <%= link_to "Edit Your Profile", edit_user_path(current_user), class: "dropdown-item" %>
                 
                  <div class="dropdown-divider"></div>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item logout-color") %>  
                </div>
              </li>
              <% end %>
          </ul> 
      </div>
  </nav>
</header>



