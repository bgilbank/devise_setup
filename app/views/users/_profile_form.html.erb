<%= form_for(@user, :url => { :action => "update_profile" } ) do |f| %>
<%= devise_error_messages2! %>
<div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :about %><br />
    <%= f.text_area :about, class: "form-control" %>
  </div>
  <!-- This should only be shown to admins -->
  <div class="form-group">
    <%= f.label :role %><br />
    <%= f.text_field :role, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-danger" %>
  </div>
<% end %>