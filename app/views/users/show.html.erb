<div class="section-block section-block-intro">
 <div class="container">
  <div class="row">
   <div class="col-sm-4"> 
   	<div class="card border-top-0 border-bottom-0 border-left-0">
	  <div class="card-body your-profile">
	     <% if @user.img.present? %>
          <%= image_tag @user.img.url, class: "card-img-top img-thumbnail profile-img-edit" %>
         <% else %>
           <%= gravatar_for @user %>
          <% end %>
           <div class="card-block">
        <h4 class="card-title"><%= @user.first_name + ' ' +  @user.last_name %></h4>
  	       <p class="card-text"><%= @user.about %></p>
           <%= link_to "New Blog Post", new_dashboard_post_path, class: 'btn btn-primary' %>
	    </div>
       </div>
     </div>
    </div>

	<div class="col-sm-8">
	 <h2 class="page-titles">Your Posts:</h2>
    <% if @posts.present? %>
     <% @posts.each do |post| %>
     <div class="card rounded users-posts-show mt-2">
      <div class="card-block card-block-users">
       <h4 class="card-title"><%= post.title %></h4>
         <p class="card-text"><%= truncate(post.body.html_safe, :escape => false, :length => 60) %></p>
		    <%= link_to 'Edit this post', edit_dashboard_post_path(post), class: 'card-link' %>
		    <%= link_to 'Deletete this post', dashboard_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-link text-danger' %>
      </div>
     </div>
     <% end %>
     <% else %>
     <div class="card rounded users-posts-show">
      <div class="card-block card-block-users">
       <h4 class="card-title">No posts yet!</h4>
         <p class="card-text">Create one now.</p>
		     <%= link_to 'New Post', new_dashboard_post_path, class: "btn btn-primary" %>
      </div>
     </div>
     <% end %>
    </div>
  
  </div><!-- Row -->
 </div><!-- Container -->
</div><!-- Section Block -->
